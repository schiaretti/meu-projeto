{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2015"],
    "allowJs": false,
    "jsx": "react-jsx", // Configuração correta para suportar JSX
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}